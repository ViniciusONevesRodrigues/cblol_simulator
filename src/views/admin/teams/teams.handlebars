        <small><b>Time:</b> {{name}} </small><br>
        <small><b>Top:</b> {{Top}} </small><br>
        <small><b>Jungle:</b> {{Jungle}} </small><br>
        <small><b>Mid:</b> {{Mid}} </small><br>
        <small><b>ADC:</b> {{ADC}} </small><br>
        <small><b>Support:</b> {{Support}} </small><br>
        <a href="/rota_teams/edit_teams/{{_id}}">
            <button id="edit">Editar time</button></a>
        <a href="/rota_teams/delete_teams/{{_id}}">
            <button id="delete">Deletar time</button></a>
        <br>
    </div>
        {{/each}}
    </div>
</main>