<link rel="stylesheet" href="/css/teams.css">
<main>
    <div id="center">
    <nav>
        <a href="/rota_players/players">
            <img src="/img/person.png" id="personImg">
        </a>
        <a href="/rota_teams/teams">
            <img src="/img/group.png" id="groupImg">
        </a>
    </nav>
    </div>
    <div id="square"></div>
    <div id="square2"></div>
    <div id="title">Lista de times</div>
    <div id="center">
    <a href="/rota_teams/teams/add">
        <button id="btnAdd">+</button>
    </a>
    </div>
